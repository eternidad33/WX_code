<!--index.wxml-->
<view id='box'>
<view class="title">页 面Flex设置</view>
<!-- 实现三栏水平均匀布局 -->
<view style="display:flex;line-height:80rpx">
<view style="background-color:red;flex-grow:1">1</view>
<view style="background-color:green;flex-grow:1">2</view>
<view style="background-color:blue;flex-grow:1">3</view>
</view>
===================
<!-- 实现左右混合布局 -->
<view style="display:flex;height:300rpx">
<view style="background-color:red;width:250rpx;line-height:300rpx">1</view>
<view style="display:flex;flex-direction:column;flex-grow:1">
<view style="background-color:green;flex-grow:1;line-height:150rpx">2</view>
<view style="background-color:blue;flex-grow:1;line-height:150rpx">3</view>
</view>
</view>
===================
<!-- 实现上下混合布局 -->
<view style="display:flex;flex-direction:column;height:150rpx;">
<view style="background-color:red;line-height:150rpx">1</view>
<view style="display:flex;flex-direction:row">
<view style="background-color:green;flex-grow:1;line-height:150rpx">2</view>
<view style="background-color:blue;flex-grow:1;line-height:150rpx">3</view>
</view>
</view>
</view>
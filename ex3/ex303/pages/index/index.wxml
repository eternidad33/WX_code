<!--index.wxml-->
<view class="box">
  <view class="title">循环求和计算器</view>
  <input placeholder="请输入开始的值" type="number" bindblur="startNum"></input>
  <input placeholder="请输入结束的值" type="number" bindblur="endNum"></input>
  <button bindtap="calc" type="primary">计算</button>
  <view>运算后的结果为：{{result}}</view>
</view>
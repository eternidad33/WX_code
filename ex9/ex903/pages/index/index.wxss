/* pages/API/Animation/index.wxss */

.animation-area {
  /* 动画区样式 */
  display: flex;
  width: 100%;
  padding-top: 150rpx;
  padding-bottom: 150rpx;
  justify-content: center;
  overflow: hidden;
  background-color: #fff;
  border: 1px solid sandybrown;
  margin-bottom: 10px;
}

.animation-element {
  /* 动画元素样式 */
  width: 200rpx;
  height: 200rpx;
  background-color: #1aad19;
}

.btn-row {
  /* 按钮布局 */
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

button {
  /* 按钮样式 */
  margin: 5px;
}
